.main{
position:relative;
width:100%;
overflow:hidden;
min-height:100vh;
background:rgba(244,244,244,1);
}
.part{
position:relative;
width:100%;
margin-top:15rpx;
background:#fff;
}
.section{
position:relative;
width:100%;
line-height:80rpx;
box-sizing:border-box;
padding:0 20rpx;
font-size:26rpx;
color:#333;
border-bottom:1px solid #f5f5f5;
}
.picker{
position:absolute;
top:0;
right:20rpx;
display:block;
height:80rpx;
font-size:24rpx;
color:#ccc;
line-height:80rpx;
box-sizing:border-box;
padding-left:140rpx;
}
.section input{
position:absolute;
top:0;
left:0;
width:100%;
display:block;
height:80rpx;
font-size:24rpx;
color:#ccc;
line-height:80rpx;
box-sizing:border-box;
padding-left:140rpx;
}
.showPic{
position:relative;
width:100%;
display:flex;
flex-wrap: wrap;
justify-content: space-between;
}
.showPic image{
width:345rpx;
height:220rpx;
margin-bottom:20rpx;
}
.order{
position:relative;
}
.order .picker{
float:right;
color:#79BDF9;
}
.part textarea{
position:relative;
width:100%;
height:205rpx;
font-size:26rpx;
color:#ccc;
box-sizing:border-box;
padding:30rpx;
}
.address{
position:absolute;
top:0;
right:20rpx;
z-index:3;
height: 80rpx;
width: 100%;

}
.address input{
right:0;
left:auto;
text-align:right;
padding-left:200rpx;
}
button{
display:block;
position:relative;
width:94%!important;
height:85rpx;
color:#fff;
padding:0;
font-size:34rpx;
font-weight:normal;
line-height:85rpx;
margin:60rpx auto 60rpx;
background:#79BDF9;
}