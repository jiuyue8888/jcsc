.tabs{
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 4;
    width: 100%;
    height: 120rpx;
    box-sizing: border-box;
    padding: 20rpx 0;
    font-size: 28rpx;
    background: #fff;
    border-top:1px solid #ccc;
}
.tabs .tab{
position:relative;
    float: left;
    width: 25%;
    text-align: center;
    color:#000;
    text-decoration: none;
    outline-width: 0;
    -webkit-tap-highlight-color: transparent;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    user-select:none;
    background: transparent;

    height:90rpx;
}
.tabs .tab image{
    width:50rpx;
    height:50rpx;
    margin:0 auto;
}
.tabs .tab text{
    position:absolute;
    left:50%;
    bottom:0;
    width:90rpx;
    height:40rpx;
    margin-left:-45rpx;
    font-size:24rpx;
    line-height:40rpx;
    text-align:center;

}
.tabs .curr{
    color: #000;
}