.main{
position:relative;
width:100%;
overflow:hidden;
min-height:100vh;
background:rgba(254,254,254,1);
}
.messList{
position:relative;
width:90%;
overflow:hidden;
margin:20rpx auto 40rpx;
}
.messIcon{
position:absolute;
top:0;
left:0;
width:108rpx;
height:108rpx;
}
.mess-content{
position:relative;
width:100%;
box-sizing:border-box;
padding:40rpx;
border-top:1px solid #e5e5e5;
}
.title{
display:block;
font-size:30rpx;
color:#464646;
line-height:48rpx;
}
.content{
position:relative;
width:100%;
box-sizing:border-box;
padding-right:10rpx;
display:block;
font-size:24rpx;
color:#ADADAD;
line-height:40rpx;

}
.status::after{
    content:'';
    position:absolute;
    top:50%;
    right:0;
    margin-top:-5rpx;
    width:10rpx;
    height:10rpx;
    border-radius:50%;
    background:#F95054;
}
.time{
display:block;
font-size:24rpx;
color:#ADADAD;
line-height:48rpx;
}