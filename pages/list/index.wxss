.main{
position:relative;
width:100%;
overflow:hidden;
min-height:100vh;
background:rgba(221,221,221,1);
}

.order-item{
position:relative;
width:100%;
box-sizing:border-box;
padding:30rpx 30rpx 30rpx 170rpx;
display:block;
font-size:26rpx;
color:#666;
overflow:hidden;
background:#fff;
}
.order-item::before{
position:absolute;
left:30rpx;
bottom:0;
content:'';
width:90%;
height:1px;
background:#e9e9e9;
}
.order-item image{
position:absolute;
top:35rpx;
left:30rpx;
width:120rpx;
height:120rpx;
object-fit: cover;
}
.status{
position:absolute;
top:20rpx;
right:20rpx;
display:block;
font-size:24rpx;
color:#ADADAD;
line-height:48rpx;
}
.s1{
color:#A6A40D;
}
.s2{
color:#D41E40;
}
.s3{
color:#0DA626;
}
.title{
position:relative;
width:100%;
box-sizing:border-box;

display:block;
font-size:38rpx;
color:#000;
line-height:48rpx;


}

.content{
position:relative;
width:100%;
box-sizing:border-box;
padding-right:10rpx;
display:block;
font-size:30rpx;
color:#464646;
line-height:48rpx;
overflow:hidden;
text-overflow: ellipsis;
    white-space: nowrap;
}
.btn{
float:right;
width:151rpx;
height:59rpx;
line-height:59rpx;
text-align:center;
color:#fff;
font-size:26rpx;
background:#79BDF9;
border-radius:20rpx;
}
.time{

display:block;
font-size:28rpx;


}