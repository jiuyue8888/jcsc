.main{
position:relative;
width:100%;
overflow:hidden;
min-height:100vh;
background:rgba(244,244,244,1);
}
.user{
display:block;
position:relative;
width:690rpx;
height:220rpx;
margin:20rpx auto 30rpx;
overflow:hidden;
}
.money{
float:right;
color:#82C0FC;
font-size:28rpx;
}
.color{
color:#FB4040;
}
.user text{
display:block;
position:absolute;
top:50%;
left:180rpx;
width:480rpx;
height:60rpx;
line-height:60rpx;
margin-top:-30rpx;
color:#fff;
font-size:34rpx;
}
.pic{
display:block;
position:absolute;
top:50%;
left:34rpx;
width:132rpx;
height:132rpx;
margin-top:-66rpx;
border-radius:50%;
}
.banner{
display:block;
width:690rpx;
height:220rpx;
}
.part{
position:relative;
width:690rpx;
box-sizing:border-box;
padding:0 30rpx;
background:#fff;
border-radius:20rpx;
margin:10rpx auto 40rpx;
}
.partList{
position:relative;
width:100%;
height:130rpx;
line-height:130rpx;
box-sizing:border-box;
padding:0 50rpx;
border-bottom:1px solid rgba(229,229,229,1);
}
.partList:nth-last-child(1){
border-bottom:none;
}
.icon{
display:block;
position:absolute;
left:0;
top:50%;
width:40rpx;
height:40rpx;
margin-top:-20rpx;
}
.right{
display:block;
position:absolute;
right:0;
top:50%;
width:11rpx;
height:20rpx;
margin-top:-10rpx;
}
