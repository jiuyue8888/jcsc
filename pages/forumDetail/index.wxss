.main{
position:relative;
width:100%;
overflow:hidden;
min-height:100vh;
border-top:1px solid #f5f5f5;
background:rgba(254,254,254,1);
}
.forumList{
position:relative;
width:90%;
overflow:hidden;
margin:20rpx auto 20rpx;
border-bottom:1px solid #f5f5f5;
}
.pic{
position:absolute;
top:0;
left:0;
width:66rpx;
height:66rpx;
border-radius:50%;
}
.forum-content{
position:relative;
width:100%;

box-sizing:border-box;
padding:10rpx 0 0 80rpx;
}
.title{
display:block;
font-size:24rpx;
color:#8FD3F4;
line-height:37rpx;
}
.content{
position:relative;
width:100%;
box-sizing:border-box;
padding-right:10rpx;
display:block;
font-size:22rpx;
color:#4D5466;
line-height:30rpx;

}
.forum-img{
margin:20rpx 0 0;
width:300rpx;

}
.time{
display:block;
font-size:18rpx;
color:#ADADAD;
line-height:37rpx;
}
.add{
font-size:18rpx;
color:#1777CB;
position:relative;
display:block;
width:100%;
height:60rpx;
line-height:60rpx;
padding-bottom:20rpx;
box-sizing:border-box;
padding-left:20rpx;
}
.pay{
position:absolute;
top:0;
right:0;
width:141rpx;
height:54rpx;
text-align:center;
color:#fff;
font-size:26rpx;
line-height:54rpx;
background:#F5DC77;
}
.add image{
width:16rpx;
height:25rpx;
position:absolute;
top:50%;
left:0;
margin-top:-12rpx;
}