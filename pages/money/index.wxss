.main{
position:relative;
width:100%;
overflow:hidden;
min-height:100vh;
background:rgba(244,244,244,1);
}
.part{
position:relative;
width:100%;
margin-top:15rpx;
background:#fff;
}
.section{
position:relative;
width:100%;
line-height:100rpx;
box-sizing:border-box;
padding:0 20rpx;
font-size:30rpx;
color:#1c1c1c;
border-bottom:1px solid #f5f5f5;
}

.section_tip{
 color:#EF2626;
 font-size:24rpx;
 }
 .section_tip1{
 color:#ccc;
 font-size:24rpx;
 line-height: 34rpx;
 padding: 24rpx 0;

 }
.picker{
position:absolute;
top:0;
right:20rpx;
display:block;
height:80rpx;
font-size:24rpx;
color:#ccc;
line-height:80rpx;
box-sizing:border-box;
padding-left:140rpx;
}
.section text{
position:absolute;
top:0;
left:0;
width:100%;
display:block;
height:100rpx;
font-size:30rpx;
color:#79BDF9;
line-height:100rpx;
box-sizing:border-box;
padding-left:200rpx;
}
.section input{
position:absolute;
top:0;
left:0;
width:100%;
display:block;
height:100rpx;
font-size:30rpx;
color:#ccc;
line-height:100rpx;
box-sizing:border-box;
padding-left:160rpx;
}

.showPic{
